{
  "name": "simple-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend app for simple",
  "license": "UNLICENSED",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch --clear-screen=false -r dotenv/config src/index.ts | pino-pretty -t",
    "dev:script": "tsx watch --respawn -r dotenv/config",
    "generate:schema": "tsx -r dotenv/config src/index.ts --exit-after-generate-schema",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "run:script": "tsx -r dotenv/config",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "cross-env TEST_MODE=unit vitest run .unit.",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@envelop/core": "5.0.1",
    "@envelop/disable-introspection": "6.0.0",
    "@fastify/cookie": "11.0.1",
    "@fastify/helmet": "13.0.0",
    "@fastify/request-context": "6.0.1",
    "@pothos/core": "4.3.0",
    "@pothos/plugin-prisma": "4.3.1",
    "@pothos/plugin-relay": "4.3.0",
    "@pothos/plugin-simple-objects": "4.1.0",
    "@pothos/plugin-tracing": "1.1.0",
    "@pothos/tracing-sentry": "1.1.1",
    "@prisma/client": "6.5.0",
    "@sentry/core": "9.17.0",
    "@sentry/node": "9.17.0",
    "@sentry/profiling-node": "9.17.0",
    "altair-fastify-plugin": "8.0.4",
    "cross-env": "7.0.3",
    "es-toolkit": "1.31.0",
    "fastify": "5.3.2",
    "fastify-plugin": "5.0.1",
    "graphql": "16.9.0",
    "graphql-yoga": "5.6.1",
    "nanoid": "3.3.8",
    "pino": "9.5.0",
    "uuid": "9.0.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@envelop/types": "5.0.0",
    "@eslint/js": "9.32.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "9.0.1",
    "@types/ws": "8.5.13",
    "@vitest/eslint-plugin": "1.3.4",
    "dotenv": "16.3.1",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-unicorn": "60.0.0",
    "pg-connection-string": "2.6.4",
    "pino-pretty": "13.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.19",
    "prisma": "6.5.0",
    "tsc-alias": "1.8.10",
    "tsx": "4.19.3",
    "typescript": "5.7.3",
    "typescript-eslint": "8.38.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.7",
    "vitest-mock-extended": "1.3.2"
  },
  "engines": {
    "node": "^22.14.0",
    "pnpm": "^10.6.0"
  },
  "volta": {
    "node": "22.14.0"
  },
  "prisma": {
    "seed": "tsx -r dotenv/config src/prisma/seed.ts"
  }
}
