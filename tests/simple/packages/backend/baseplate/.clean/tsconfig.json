{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/dist", "**/lib"]
}
