{
  "name": "simple-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend app for simple",
  "license": "UNLICENSED",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch --clear-screen=false -r dotenv/config src/index.ts | pino-pretty -t",
    "dev:script": "tsx watch --respawn -r dotenv/config",
    "generate:schema": "tsx -r dotenv/config src/index.ts --exit-after-generate-schema",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "lint": "eslint --ext .ts,.tsx,.js.,.jsx .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "run:script": "tsx -r dotenv/config",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "cross-env TEST_MODE=unit vitest run .unit."
  },
  "dependencies": {
    "@envelop/core": "5.0.1",
    "@envelop/disable-introspection": "6.0.0",
    "@fastify/cookie": "11.0.1",
    "@fastify/helmet": "13.0.0",
    "@fastify/request-context": "6.0.1",
    "@pothos/core": "4.3.0",
    "@pothos/plugin-prisma": "4.3.1",
    "@pothos/plugin-relay": "4.3.0",
    "@pothos/plugin-simple-objects": "4.1.0",
    "@pothos/plugin-tracing": "1.1.0",
    "@pothos/tracing-sentry": "1.1.1",
    "@prisma/client": "5.19.1",
    "@sentry/core": "8.41.0",
    "@sentry/node": "8.41.0",
    "@sentry/profiling-node": "8.41.0",
    "altair-fastify-plugin": "8.0.4",
    "cross-env": "7.0.3",
    "fastify": "5.1.0",
    "fastify-plugin": "5.0.1",
    "graphql": "16.9.0",
    "graphql-yoga": "5.6.1",
    "lodash": "4.17.21",
    "nanoid": "3.3.8",
    "pino": "9.5.0",
    "uuid": "9.0.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@envelop/types": "5.0.0",
    "@prisma/instrumentation": "5.19.1",
    "@sentry/types": "8.41.0",
    "@types/lodash": "4.17.7",
    "@types/node": "^20.0.0",
    "@types/uuid": "9.0.1",
    "@types/ws": "8.5.13",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "dotenv": "16.3.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-vitest": "0.4.1",
    "pg-connection-string": "2.6.4",
    "pino-pretty": "13.0.0",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.2",
    "prisma": "5.19.1",
    "tsc-alias": "1.8.10",
    "tsx": "4.19.1",
    "typescript": "5.5.4",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.1.1",
    "vitest-mock-extended": "1.3.2"
  },
  "engines": {
    "node": "^20.18.1",
    "pnpm": "^9.15.0"
  },
  "volta": {
    "node": "20.18.1"
  },
  "prisma": {
    "seed": "tsx -r dotenv/config src/prisma/seed.ts"
  }
}
