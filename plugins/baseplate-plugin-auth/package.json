{
  "name": "@halfdomelabs/baseplate-plugin-auth",
  "version": "5.1.0",
  "description": "Contains the auth plugin for Baseplate",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "dist/**/*",
    "CHANGELOG",
    "manifest.json"
  ],
  "scripts": {
    "build": "concurrently pnpm:build:*",
    "build:static": "cpx \"src/**/{templates/**,static/**,metadata.json}\" \"dist/\" --clean",
    "build:tsc": "tsc -p tsconfig.build.json && tsc-alias",
    "build:vite": "vite build",
    "clean": "rm -rf ./dist",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "typecheck": "tsc --noEmit",
    "watch": "concurrently pnpm:watch:*",
    "watch:static": "pnpm build:static --watch",
    "watch:tsc": "tsc -p tsconfig.build.json --preserveWatchOutput -w",
    "watch:tsc-alias": "tsc-alias -w",
    "watch:vite": "vite build --watch"
  },
  "dependencies": {
    "@halfdomelabs/core-generators": "workspace:*",
    "@halfdomelabs/fastify-generators": "workspace:*",
    "@halfdomelabs/react-generators": "workspace:*",
    "@halfdomelabs/ui-components": "workspace:*",
    "@halfdomelabs/utils": "workspace:*",
    "@hookform/resolvers": "5.0.1",
    "inflection": "3.0.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-hook-form": "7.56.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@halfdomelabs/project-builder-lib": "workspace:*",
    "@halfdomelabs/sync": "workspace:*",
    "@halfdomelabs/tools": "workspace:*",
    "@originjs/vite-plugin-federation": "1.3.6",
    "@tailwindcss/postcss": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "concurrently": "9.0.1",
    "cpx2": "7.0.1",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "postcss-prefixer": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "tsc-alias": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@halfdomelabs/project-builder-lib": "workspace:*",
    "@halfdomelabs/sync": "workspace:*"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
