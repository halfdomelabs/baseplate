{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["PLAYWRIGHT_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md"],
      "outputs": ["build/**", "dist/**", ".next/**", "!.next/cache/**"],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputLogs": "errors-only"
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "prettier:check": {},
    "prettier:write": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "watch": {
      "persistent": true,
      "cache": false
    }
  }
}
