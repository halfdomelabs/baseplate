{
  "workspaces": {
    "packages/*": {
      "entry": ["src/index.{ts,tsx}", "src/web/index.{ts,tsx}"],
      "project": "src/**/*.{ts,tsx}"
    },
    "plugins/*": {
      "entry": ["src/index.{ts,tsx}", "src/web/index.{ts,tsx}"],
      "project": "src/**/*.{ts,tsx}"
    },
    "packages/project-builder-test": {
      "ignore": ["src/tests/*.ts"]
    }
  },
  "ignore": [
    "tests/**",
    "**/templates/**",
    "**/morphers/tests/**",
    "**/merge-algorithms/tests/**"
  ],
  "ignoreBinaries": ["only-allow"]
}
