{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "target": "es2022",
    "lib": ["es2023"],
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/dist", "**/lib"]
}
