{
  "name": "@prisma-crud/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend app for todo-with-auth0",
  "license": "UNLICENSED",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "prisma.config.ts",
    "prisma/**/*"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "concurrently pnpm:dev:*",
    "dev:server": "tsx watch --clear-screen=false --env-file-if-exists=.env --import ./src/instrument.ts src/index.ts | pino-pretty -t",
    "dev:workers": "tsx watch --clear-screen=false --env-file-if-exists=.env --import ./src/instrument.ts src/scripts/run-workers.ts | pino-pretty -t",
    "generate:schema": "tsx --env-file-if-exists=.env src/index.ts --exit-after-generate-schema",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "script:dev": "tsx watch --respawn --env-file-if-exists=.env --import ./src/instrument.ts",
    "script:run": "tsx --env-file-if-exists=.env --import ./src/instrument.ts",
    "start": "node --import ./dist/instrument.js dist/index.js",
    "start:workers": "node --import ./dist/instrument.js dist/scripts/run-workers.js",
    "test": "vitest run",
    "test:unit": "cross-env TEST_MODE=unit vitest run .unit.",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.934.0",
    "@aws-sdk/lib-storage": "3.934.0",
    "@aws-sdk/s3-presigned-post": "3.934.0",
    "@aws-sdk/s3-request-presigner": "3.934.0",
    "@envelop/core": "5.3.0",
    "@envelop/disable-introspection": "8.0.0",
    "@fastify/cookie": "11.0.1",
    "@fastify/helmet": "13.0.0",
    "@fastify/request-context": "6.0.1",
    "@pothos/core": "4.10.0",
    "@pothos/plugin-prisma": "4.14.1",
    "@pothos/plugin-relay": "4.6.2",
    "@pothos/plugin-simple-objects": "4.1.3",
    "@pothos/plugin-tracing": "1.1.0",
    "@pothos/plugin-validation": "4.2.0",
    "@pothos/tracing-sentry": "1.1.1",
    "@prisma/adapter-pg": "7.4.0",
    "@prisma/client": "7.4.0",
    "@sentry/core": "9.17.0",
    "@sentry/node": "9.17.0",
    "@sentry/profiling-node": "9.17.0",
    "altair-fastify-plugin": "8.0.4",
    "auth0": "4.0.2",
    "axios": "1.13.5",
    "bullmq": "5.61.2",
    "es-toolkit": "1.31.0",
    "fastify": "5.7.4",
    "fastify-auth0-verify": "3.0.0",
    "fastify-plugin": "5.1.0",
    "fastify-raw-body": "5.0.0",
    "graphql": "16.11.0",
    "graphql-scalars": "1.23.0",
    "graphql-yoga": "5.15.1",
    "ioredis": "5.8.1",
    "mime-types": "2.1.35",
    "nanoid": "5.1.6",
    "pino": "9.5.0",
    "stripe": "14.5.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@envelop/types": "5.2.1",
    "@eslint/js": "9.39.2",
    "@types/mime-types": "2.1.1",
    "@types/node": "^22.0.0",
    "@types/ws": "8.5.13",
    "@vitest/eslint-plugin": "1.6.6",
    "concurrently": "9.2.1",
    "cross-env": "7.0.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-perfectionist": "5.4.0",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "17.3.0",
    "pg-connection-string": "2.6.4",
    "pino-pretty": "13.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "3.0.0",
    "prisma": "7.4.0",
    "sentry-testkit": "^6.2.2",
    "tsc-alias": "1.8.10",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.1.12",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.16",
    "vitest-mock-extended": "3.1.0"
  },
  "engines": {
    "node": "^22.18.0",
    "pnpm": "^10.27.0"
  },
  "volta": {
    "node": "22.18.0"
  }
}
