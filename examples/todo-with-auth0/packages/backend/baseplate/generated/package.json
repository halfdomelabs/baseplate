{
  "name": "@prisma-crud/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend app for todo-with-auth0",
  "license": "UNLICENSED",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch --clear-screen=false --env-file-if-exists=.env src/index.ts | pino-pretty -t",
    "dev:workers": "tsx watch --clear-screen=false --env-file-if-exists=.env ./scripts/run-workers.ts | pino-pretty -t",
    "generate:schema": "tsx --env-file-if-exists=.env src/index.ts --exit-after-generate-schema",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "run:workers": "pnpm run:script ./scripts/run-workers.ts",
    "script:dev": "tsx watch --respawn --env-file-if-exists=.env",
    "script:run": "tsx --env-file-if-exists=.env",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "cross-env TEST_MODE=unit vitest run .unit.",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.370.0",
    "@aws-sdk/lib-storage": "3.370.0",
    "@aws-sdk/s3-presigned-post": "3.370.0",
    "@aws-sdk/s3-request-presigner": "3.370.0",
    "@bull-board/api": "6.5.3",
    "@bull-board/fastify": "6.5.3",
    "@envelop/core": "5.3.0",
    "@envelop/disable-introspection": "8.0.0",
    "@fastify/cookie": "11.0.1",
    "@fastify/formbody": "8.0.1",
    "@fastify/helmet": "13.0.0",
    "@fastify/request-context": "6.0.1",
    "@pothos/core": "4.8.1",
    "@pothos/plugin-prisma": "4.10.0",
    "@pothos/plugin-relay": "4.6.2",
    "@pothos/plugin-simple-objects": "4.1.3",
    "@pothos/plugin-tracing": "1.1.0",
    "@pothos/tracing-sentry": "1.1.1",
    "@prisma/client": "6.16.2",
    "@sentry/core": "9.17.0",
    "@sentry/node": "9.17.0",
    "@sentry/profiling-node": "9.17.0",
    "altair-fastify-plugin": "8.0.4",
    "auth0": "4.0.2",
    "axios": "1.12.0",
    "bullmq": "5.1.1",
    "es-toolkit": "1.31.0",
    "fastify": "5.3.2",
    "fastify-auth0-verify": "3.0.0",
    "fastify-plugin": "5.0.1",
    "fastify-raw-body": "5.0.0",
    "graphql": "16.11.0",
    "graphql-scalars": "1.23.0",
    "graphql-yoga": "5.15.1",
    "ioredis": "5.3.2",
    "mime-types": "2.1.35",
    "ms": "2.1.3",
    "nanoid": "3.3.8",
    "pino": "9.5.0",
    "postmark": "4.0.2",
    "stripe": "14.5.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@envelop/types": "5.2.1",
    "@eslint/js": "9.32.0",
    "@types/mime-types": "2.1.1",
    "@types/ms": "0.7.34",
    "@types/node": "^22.0.0",
    "@types/redis-info": "3.0.3",
    "@types/ws": "8.5.13",
    "@vitest/eslint-plugin": "1.3.4",
    "cross-env": "7.0.3",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-unicorn": "60.0.0",
    "globals": "16.4.0",
    "ioredis-mock": "8.7.0",
    "pg-connection-string": "2.6.4",
    "pino-pretty": "13.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.19",
    "prisma": "6.16.2",
    "tsc-alias": "1.8.10",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "vitest-mock-extended": "1.3.2"
  },
  "engines": {
    "node": "^22.18.0",
    "pnpm": "^10.16.0"
  },
  "volta": {
    "node": "22.18.0"
  }
}
