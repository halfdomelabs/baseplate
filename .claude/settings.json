{
  "enabledMcpjsonServers": ["baseplate-dev-server"],
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [
      "Bash(pnpm build:*)",
      "Bash(pnpm generate:templates:*)",
      "mcp__baseplate-dev-server__extract-templates",
      "mcp__baseplate-dev-server__generate-templates",
      "mcp__baseplate-dev-server__configure-ts-template"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if [ -n \"$file_path\" ] && [ \"$file_path\" != \"null\" ]; then scripts/format-and-lint.ts \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true"
  }
}
