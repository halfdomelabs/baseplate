{
  "affected": {
    "defaultBase": "main"
  },
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/package.json"
    ],
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.stories.tsx",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/vitest.config.ts",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/prettier.config.js"
    ],
    "e2eTests": [
      "{workspaceRoot}/tests/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "production",
        "^production"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "release": {
      "inputs": [
        "production",
        "^production"
      ],
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "^production"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "prettier:check": {
      "cache": true
    },
    "test": {
      "inputs": [
        "default",
        "^production"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "test:e2e": {
      "inputs": [
        "default",
        "^production",
        "e2eTests"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    }
  },
  "defaultBase": "main",
  "nxCloudId": "6777ad092e5ee0cfc9db6992"
}