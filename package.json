{
  "name": "@halfdomelabs/root",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "scripts": {
    "build": "nx run-many --target=build",
    "build:affected": "nx affected --target=build",
    "clean": "nx reset && nx run-many --target=clean",
    "dev:serve": "nx run @halfdomelabs/project-builder-cli:dev:serve",
    "preinstall": "npx only-allow pnpm",
    "lint": "nx affected --target=lint",
    "prettier:check": "nx affected --target=prettier:check",
    "prettier:write": "nx affected --target=prettier:write",
    "release": "pnpm build && pnpm changeset publish",
    "serve": "nx run @halfdomelabs/project-builder-cli:start serve",
    "test": "nx affected --target=test",
    "versions:check": "check-dependency-version-consistency .",
    "versions:fix": "check-dependency-version-consistency . --fix",
    "watch": "nx run-many --target=watch --parallel=100 --output-style=stream"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@halfdomelabs/tools": "workspace:*"
  },
  "devDependencies": {
    "check-dependency-version-consistency": "^4.1.0",
    "nx": "17.2.8",
    "typescript": "5.2.2"
  },
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "node": "20.9.0"
  }
}
