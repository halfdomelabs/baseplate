{
  "name": "@halfdomelabs/sync",
  "version": "0.7.12",
  "description": "Library for syncing Baseplate descriptions",
  "homepage": "https://www.halfdomelabs.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/sync"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "dist/**/*",
    "CHANGELOG"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "clean": "rm -rf ./dist",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "watch": "concurrently pnpm:watch:*",
    "watch:tsc": "tsc -p tsconfig.build.json --preserveWatchOutput -w",
    "watch:tsc-alias": "tsc-alias -w"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "ejs": "^3.1.9",
    "es-toolkit": "1.31.0",
    "execa": "9.3.0",
    "fast-json-patch": "^3.1.1",
    "globby": "^14.0.2",
    "lodash": "^4.17.21",
    "ms": "2.1.3",
    "node-diff3": "3.1.2",
    "p-limit": "6.1.0",
    "ramda": "^0.28.0",
    "toposort": "^2.0.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/ejs": "^3.1.2",
    "@types/lodash": "4.17.7",
    "@types/ms": "0.7.34",
    "@types/node": "catalog:",
    "@types/ramda": "^0.29.3",
    "@types/toposort": "^2.0.3",
    "concurrently": "9.0.1",
    "eslint": "catalog:",
    "memfs": "4.15.1",
    "prettier": "catalog:",
    "tsc-alias": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
