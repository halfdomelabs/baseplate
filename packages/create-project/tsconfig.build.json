{
  "extends": "@baseplate-dev/tools/tsconfig.node.cli.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/tsconfig.build.tsbuildinfo",
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test-helper.ts",
    "**/__mocks__/**/*",
    "**/generators/*/*/templates/**"
  ],
  "references": [
    {
      "path": "../project-builder-cli/tsconfig.build.json"
    },
    {
      "path": "../utils/tsconfig.build.json"
    }
  ]
}
