{
  "name": "@baseplate-dev/create-project",
  "version": "0.5.1",
  "description": "CLI starter kit for creating a new Baseplate project",
  "keywords": [
    "cli",
    "scaffolding",
    "project-starter",
    "typescript",
    "development-tools",
    "baseplate",
    "full-stack",
    "code-generation"
  ],
  "homepage": "https://www.baseplate.dev",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "license": "MPL-2.0",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "imports": {
    "#src/*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "bin": "./bin/create-baseplate-project.js",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "!dist/**/*.map",
    "!dist/**/*.tsbuildinfo",
    "templates/**/*",
    "bin/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "dev:start": "tsx -C development ./src/create-baseplate-project.ts",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "node ./dist/create-baseplate-project.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@baseplate-dev/project-builder-cli": "workspace:*",
    "@baseplate-dev/project-builder-lib": "workspace:*",
    "@baseplate-dev/project-builder-server": "workspace:*",
    "@baseplate-dev/sync": "workspace:*",
    "@baseplate-dev/utils": "workspace:*",
    "chalk": "5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@baseplate-dev/tools": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "memfs": "4.15.1",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
