{
  "name": "@halfdomelabs/create-project",
  "version": "0.2.7",
  "description": "CLI starter kit for creating a new Baseplate project",
  "license": "MIT",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "bin": "./dist/create-baseplate-project.js",
  "files": [
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "scripts/**/*",
    "templates/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rm -rf ./dist",
    "dev:start": "tsx ./src/create-baseplate-project.ts",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "node ./dist/create-baseplate-project.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@inquirer/prompts": "^4.3.2",
    "axios": "1.7.4",
    "chalk": "5.3.0",
    "commander": "^12.1.0",
    "execa": "9.3.0",
    "ora": "^8.0.1",
    "package-up": "^5.0.0"
  },
  "devDependencies": {
    "@halfdomelabs/project-builder-lib": "workspace:*",
    "@halfdomelabs/tools": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsc-alias": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
