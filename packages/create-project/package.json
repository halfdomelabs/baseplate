{
  "name": "@halfdomelabs/create-project",
  "version": "0.2.17",
  "description": "CLI starter kit for creating a new Baseplate project",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "imports": {
    "#src/*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "bin": "./dist/create-baseplate-project.js",
  "files": [
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "scripts/**/*",
    "templates/**/*",
    "!dist/**/*.tsbuildinfo",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "dev:start": "tsx -C development ./src/create-baseplate-project.ts",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "node ./dist/create-baseplate-project.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@halfdomelabs/utils": "workspace:*",
    "@inquirer/prompts": "7.2.1",
    "axios": "^1.8.3",
    "chalk": "5.3.0",
    "commander": "^12.1.0",
    "execa": "9.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
