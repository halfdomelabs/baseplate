    "@halfdomelabs/sync": "workspace:*",
    "commander": "^12.1.0",
    "package-up": "^5.0.0",
    "pkg-dir": "^8.0.0",
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/ramda": "^0.29.3",
    "tsx": "4.16.2",
    "typescript": "catalog:"
