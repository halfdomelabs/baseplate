{
  "name": "@halfdomelabs/cli",
  "version": "0.7.20",
  "description": "Command line tool for syncing Baseplate descriptions",
  "homepage": "https://www.halfdomelabs.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/cli"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Kingston Tam",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "dist/**/*",
    "CHANGELOG"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist",
