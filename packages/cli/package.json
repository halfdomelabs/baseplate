{
  "name": "@halfdomelabs/cli",
  "version": "0.6.0",
  "description": "Command line tool for syncing Baseplate descriptions",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Kingston Tam",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "dist/**/*",
    "CHANGELOG"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "dev": "tsx watch ./src",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "tsx ./src"
  },
  "dependencies": {
    "@halfdomelabs/core-generators": "workspace:*",
    "@halfdomelabs/fastify-generators": "workspace:*",
    "@halfdomelabs/react-generators": "workspace:*",
    "@halfdomelabs/sync": "workspace:*",
    "commander": "^11.0.0",
    "import-meta-resolve": "^3.0.0",
    "pkg-dir": "^7.0.0",
    "pkg-up": "^4.0.0",
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/ramda": "^0.29.3",
    "tsx": "4.1.2",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
