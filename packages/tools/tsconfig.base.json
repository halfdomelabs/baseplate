{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES2018"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": ["**/node_modules", "**/dist", "**/lib", "**/*.test.ts"]
}
