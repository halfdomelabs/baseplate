{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "lib": ["ES2018"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": ["*"]
}
