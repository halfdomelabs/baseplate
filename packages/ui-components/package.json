{
  "name": "@halfdomelabs/ui-components",
  "version": "0.5.4",
  "description": "Shared UI component library",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./tailwind-base": "./tailwind.config.ts",
    "./global.css": "./src/global.css",
    "./font.css": "./src/font.css"
  },
  "main": "./dist/index.js",
  "files": [
    "LICENSE",
    "dist/**/*",
    "CHANGELOG",
    "tailwind.config.ts",
    "./src/global.css",
    "./src/font.css"
  ],
  "scripts": {
    "build": "pnpm build:lib",
    "build:lib": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:storybook": "storybook build",
    "clean": "rm -rf ./dist",
    "dev:storybook": "storybook dev -p 6006",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "watch": "concurrently pnpm:watch:*",
    "watch:tsc": "tsc -p tsconfig.build.json --preserveWatchOutput -w",
    "watch:tsc-alias": "tsc-alias -p tsconfig.build.json -w"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "3.9.0",
    "@radix-ui/react-checkbox": "1.1.1",
    "@radix-ui/react-dialog": "1.1.1",
    "@radix-ui/react-dropdown-menu": "2.1.1",
    "@radix-ui/react-label": "2.1.0",
    "@radix-ui/react-navigation-menu": "1.2.0",
    "@radix-ui/react-popover": "1.1.1",
    "@radix-ui/react-scroll-area": "1.1.0",
    "@radix-ui/react-select": "2.1.1",
    "@radix-ui/react-separator": "1.1.0",
    "@radix-ui/react-slot": "1.1.0",
    "@radix-ui/react-switch": "1.1.0",
    "@radix-ui/react-tabs": "1.1.0",
    "@radix-ui/react-tooltip": "1.1.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "cmdk": "1.0.4",
    "react": "catalog:",
    "react-colorful": "5.6.1",
    "react-dom": "catalog:",
    "react-hook-form": "7.53.0",
    "react-icons": "5.0.1",
    "sonner": "1.7.4",
    "zod": "catalog:",
    "zustand": "4.4.6"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@headlessui/tailwindcss": "^0.1.3",
    "@storybook/addon-docs": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/preview-api": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/theming": "^8.4.7",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "autoprefixer": "catalog:",
    "concurrently": "9.0.1",
    "eslint": "catalog:",
    "jsdom": "26.0.0",
    "postcss": "catalog:",
    "postcss-import": "16.1.0",
    "prettier": "catalog:",
    "storybook": "^8.4.7",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "^1.0.7",
    "tsc-alias": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-svgr": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
