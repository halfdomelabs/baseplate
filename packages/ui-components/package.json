{
  "name": "@baseplate-dev/ui-components",
  "version": "0.1.3",
  "description": "Shared UI component library",
  "keywords": [
    "react",
    "ui-components",
    "design-system",
    "baseplate",
    "full-stack",
    "typescript",
    "code-generation"
  ],
  "homepage": "https://www.baseplate.dev",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "license": "MPL-2.0",
  "author": "Half Dome Labs LLC",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "exports": {
    ".": "./dist/index.js",
    "./base-styles.css": "./dist/base-styles.css",
    "./theme.css": "./dist/theme.css",
    "./utilities.css": "./dist/utilities.css"
  },
  "main": "./dist/index.js",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "!dist/**/*.d.ts.map",
    "!dist/**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "pnpm build:tsc && pnpm build:css",
    "build:css": "cpx \"src/**/*.css\" dist --clean",
    "build:tsc": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev -p 6006",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "tsc:watch": "tsc -p tsconfig.build.json --preserveWatchOutput -w",
    "typecheck": "tsc --noEmit",
    "watch": "pnpm build:css --watch"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@baseplate-dev/utils": "workspace:*",
    "@fontsource-variable/geist": "5.2.5",
    "@fontsource-variable/geist-mono": "5.2.5",
    "@hookform/resolvers": "5.0.1",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "radix-ui": "1.4.2",
    "react": "catalog:",
    "react-colorful": "5.6.1",
    "react-dom": "catalog:",
    "react-hook-form": "7.56.3",
    "react-icons": "5.5.0",
    "sonner": "2.0.3",
    "zod": "catalog:",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@baseplate-dev/tools": "workspace:*",
    "@storybook/addon-docs": "^8.6.4",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/preview-api": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@storybook/theming": "^8.6.4",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "cpx2": "catalog:",
    "eslint": "catalog:",
    "jsdom": "26.0.0",
    "prettier": "catalog:",
    "storybook": "^8.6.4",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "catalog:",
    "tw-animate-css": "1.2.9",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-svgr": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
