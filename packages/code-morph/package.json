    "zod": "catalog:"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
