    "zod": "3.23.8"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/eslint": "catalog:",
    "@types/jscodeshift": "^0.11.11",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
