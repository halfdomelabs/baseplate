{
  "name": "@halfdomelabs/code-morph",
  "version": "0.2.5",
  "private": true,
  "description": "Simple package for running code migrations on the codebase",
  "homepage": "https://www.halfdomelabs.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/code-morph"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "files": [
    "LICENSE",
    "scripts/**/*",
    "CHANGELOG"
  ],
  "scripts": {
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "run:morpher": "tsx scripts/run-morpher.ts",
    "run:script": "tsx",
