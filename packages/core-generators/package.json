{
  "name": "@halfdomelabs/core-generators",
  "version": "0.7.4",
  "description": "Core generators for Baseplate",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "generator.json",
    "dist/**/*",
    "CHANGELOG"
  ],
  "scripts": {
    "build": "concurrently pnpm:build:*",
    "build:templates": "cpx \"src/generators/*/*/templates/**\" \"dist/generators\" --clean",
    "build:tsc": "tsc -p tsconfig.build.json && tsc-alias",
    "clean": "rm -rf ./dist",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./src",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "watch": "concurrently pnpm:watch:*",
    "watch:templates": "pnpm build:templates --watch",
    "watch:tsc": "tsc -p tsconfig.build.json --preserveWatchOutput -w",
    "watch:tsc-alias": "tsc-alias -w"
  },
  "dependencies": {
    "@halfdomelabs/sync": "workspace:*",
    "@types/eslint": "^8.44.1",
    "@types/resolve": "^1.20.2",
    "fs-extra": "11.1.1",
    "is-core-module": "2.12.1",
    "lodash": "^4.17.21",
    "prettier": "3.1.0",
    "prettier-plugin-packagejson": "2.5.0",
    "ramda": "^0.28.0",
    "resolve": "^1.22.2",
    "semver": "^7.5.4",
    "sort-keys": "^5.0.0",
    "sort-package-json": "2.7.0",
    "ts-morph": "18.0.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/fs-extra": "11.0.4",
    "@types/is-core-module": "^2.2.0",
    "@types/lodash": "4.14.196",
    "@types/prettier": "^2.7.3",
    "@types/ramda": "^0.29.3",
    "@types/semver": "^7.5.0",
    "concurrently": "8.2.2",
    "cpx2": "^5.0.0",
    "tsc-alias": "1.8.8",
    "typescript": "5.2.2",
    "vitest": "1.4.0"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
