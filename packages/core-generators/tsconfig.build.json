{
  "extends": "@halfdomelabs/tools/tsconfig.node.lib.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist",
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test-helper.ts",
    "**/__mocks__/**/*",
    "**/generators/*/*/templates/**"
  ]
}
