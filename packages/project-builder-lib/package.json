{
  "name": "@halfdomelabs/project-builder-lib",
  "version": "0.2.2",
  "description": "Library for Project Builder using Baseplate generators",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "LICENSE",
    "dist/**/*",
    "CHANGELOG"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "repository": "https://github.com/halfdomelabs/baseplate",
  "author": "Half Dome Labs LLC",
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "access": "restricted"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/node": "^18.0.0",
    "@types/ramda": "^0.27.64",
    "tsc-alias": "1.8.6",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.9.5",
    "vitest": "0.32.2"
  },
  "scripts": {
    "build": "pnpm run \"/^build:(esm|cjs)/\" && ./scripts/add-package-module.sh",
    "build:esm": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
    "watch": "./scripts/add-package-module.sh & pnpm watch:esm & pnpm watch:cjs",
    "watch:esm": "tsc --preserveWatchOutput --watch & tsc-alias --watch",
    "watch:cjs": "tsc -p tsconfig.cjs.json --preserveWatchOutput --watch & tsc-alias -p tsconfig.cjs.json --watch",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier -w ."
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "inflection": "2.0.1",
    "nanoid": "^3.1.30",
    "ramda": "^0.28.0",
    "zod": "^3.20.6"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "volta": {
    "node": "18.16.0"
  },
  "type": "module"
}
