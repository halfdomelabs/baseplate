{
  "name": "@halfdomelabs/project-builder-lib",
  "version": "0.2.1",
  "description": "Library for Project Builder using Baseplate generators",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "files": [
    "LICENSE",
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/index.d.ts",
        "default": "./lib/cjs/index.js"
      },
      "default": "./lib/cjs/index.js"
    }
  },
  "repository": "https://github.com/halfdomelabs/baseplate",
  "author": "Half Dome Labs LLC",
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "0.2.0",
    "@types/jest": "^27.4.0",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/path-browserify": "^1.0.0",
    "@types/ramda": "^0.27.64",
    "jest": "29.5.0",
    "ts-jest": "29.0.5",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.9.5"
  },
  "scripts": {
    "build": "rm -fr lib/* && yarn build:esm && yarn build:cjs && ./scripts/add-package-module.sh",
    "build:esm": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
    "watch": "./scripts/add-package-module.sh & yarn watch:esm & yarn watch:cjs",
    "watch:esm": "tsc --preserveWatchOutput --watch & tsc-alias --watch",
    "watch:cjs": "tsc -p tsconfig.cjs.json --preserveWatchOutput --watch & tsc-alias -p tsconfig.cjs.json --watch",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "test": "jest",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier -w .",
    "release": "yarn publish --non-interactive"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "inflection": "^1.13.2",
    "nanoid": "^3.1.30",
    "nanoid-dictionary": "^4.3.0",
    "path-browserify": "^1.0.1",
    "ramda": "^0.28.0",
    "zod": "^3.20.6"
  },
  "engines": {
    "node": "^16.0.0",
    "yarn": "^1.22.17"
  },
  "volta": {
    "node": "16.15.0",
    "yarn": "1.22.17"
  },
  "type": "module"
}
