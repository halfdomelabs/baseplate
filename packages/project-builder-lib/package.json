{
  "name": "@baseplate-dev/project-builder-lib",
  "version": "0.1.1",
  "description": "Library for Project Builder using Baseplate generators",
  "homepage": "https://www.halfdomelabs.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/project-builder-lib"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "exports": {
    ".": "./dist/index.js",
    "./web": "./dist/web/index.js",
    "./plugin-tools": "./dist/plugin-tools/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "dist/**/*",
    "!dist/**/*.d.ts.map",
    "CHANGELOG"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -p tsconfig.build.json --preserveWatchOutput -w"
  },
  "dependencies": {
    "@baseplate-dev/sync": "workspace:*",
    "@baseplate-dev/ui-components": "workspace:*",
    "@baseplate-dev/utils": "workspace:*",
    "culori": "^4.0.1",
    "es-toolkit": "1.31.0",
    "globby": "^14.0.2",
    "immer": "10.1.1",
    "inflection": "3.0.0",
    "react": "catalog:",
    "react-hook-form": "7.56.3",
    "zod": "catalog:",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@baseplate-dev/tools": "workspace:*",
    "@faker-js/faker": "9.8.0",
    "@types/culori": "^2.1.1",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "type-fest": "4.41.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
