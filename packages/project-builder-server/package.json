{
  "name": "@baseplate-dev/project-builder-server",
  "version": "0.4.1",
  "description": "Server for Project Builder using Baseplate generators",
  "keywords": [
    "backend",
    "baseplate",
    "full-stack",
    "typescript",
    "code-generation"
  ],
  "homepage": "https://www.baseplate.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/project-builder-server"
  },
  "license": "MPL-2.0",
  "author": "Half Dome Labs LLC",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "exports": {
    ".": "./dist/index.js",
    "./template-extractor": "./dist/template-extractor/index.js",
    "./plugins": "./dist/plugins/index.js",
    "./actions": "./dist/actions/index.js",
    "./dev-server": "./dist/dev-server/index.js",
    "./user-config": "./dist/user-config/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "!dist/**/*.map",
    "!dist/**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "test": "vitest",
    "tsc:watch": "tsc -p tsconfig.build.json --preserveWatchOutput -w",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@baseplate-dev/core-generators": "workspace:*",
    "@baseplate-dev/fastify-generators": "workspace:*",
    "@baseplate-dev/project-builder-lib": "workspace:*",
    "@baseplate-dev/react-generators": "workspace:*",
    "@baseplate-dev/sync": "workspace:*",
    "@baseplate-dev/utils": "workspace:*",
    "@fastify/helmet": "13.0.0",
    "@fastify/static": "8.0.3",
    "@fastify/websocket": "11.0.1",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@trpc/server": "^11.8.0",
    "chalk": "5.3.0",
    "change-case": "5.4.4",
    "chokidar": "4.0.3",
    "diff": "^8.0.2",
    "es-toolkit": "1.31.0",
    "execa": "9.3.0",
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "fastify-type-provider-zod": "^6.0.0",
    "globby": "^14.0.2",
    "ignore": "^7.0.5",
    "immer": "10.1.1",
    "inflection": "3.0.0",
    "isbinaryfile": "^5.0.4",
    "micromatch": "^4.0.8",
    "mime": "^4.0.3",
    "open": "10.1.0",
    "pino": "9.5.0",
    "ts-morph": "26.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@baseplate-dev/tools": "workspace:*",
    "@types/micromatch": "^4.0.9",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "memfs": "4.15.1",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
