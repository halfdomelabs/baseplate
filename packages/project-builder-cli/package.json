{
  "name": "@halfdomelabs/project-builder-cli",
  "version": "0.4.2",
  "description": "Full-stack CLI builder using Baseplate generators",
  "main": "dist/index.js",
  "repository": "https://github.com/halfdomelabs/baseplate",
  "author": "Half Dome Labs LLC",
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "scripts/**/*"
  ],
  "bin": {
    "baseplate": "./scripts/baseplate.js"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/fs-extra": "11.0.1",
    "@types/node": "^18.0.0",
    "@types/ramda": "^0.29.3",
    "@types/ws": "^8.5.3",
    "dotenv": "^16.0.3",
    "tsc-alias": "1.8.7",
    "tsx": "^3.12.7",
    "typescript": "5.0.4"
  },
  "scripts": {
    "start": "tsx -r dotenv/config ./src",
    "dev": "tsx watch -r dotenv/config ./src",
    "dev:serve": "pnpm dev serve",
    "build": "tsc && tsc-alias",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier -w ."
  },
  "dependencies": {
    "@fastify/helmet": "11.0.0",
    "@fastify/static": "6.10.2",
    "@fastify/websocket": "^8.1.0",
    "@halfdomelabs/core-generators": "workspace:*",
    "@halfdomelabs/fastify-generators": "workspace:*",
    "@halfdomelabs/project-builder-lib": "workspace:*",
    "@halfdomelabs/project-builder-web": "workspace:*",
    "@halfdomelabs/react-generators": "workspace:*",
    "@halfdomelabs/sync": "workspace:*",
    "chalk": "5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "fastify": "4.19.2",
    "fs-extra": "11.1.1",
    "globby": "13.2.0",
    "import-meta-resolve": "^3.0.0",
    "json-stringify-pretty-compact": "^3.0.0",
    "open": "^9.1.0",
    "pino": "8.14.1",
    "pino-pretty": "10.0.1",
    "pkg-dir": "^7.0.0",
    "pkg-up": "^4.0.0",
    "ramda": "^0.28.0",
    "sort-keys": "^5.0.0"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "volta": {
    "node": "18.16.0"
  },
  "type": "module"
}
