{
  "name": "@baseplate-dev/project-builder-cli",
  "version": "0.1.3",
  "description": "Full-stack CLI builder using Baseplate generators",
  "keywords": [
    "cli",
    "full-stack",
    "code-generation",
    "development-tools",
    "scaffolding",
    "baseplate",
    "typescript"
  ],
  "homepage": "https://www.baseplate.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/project-builder-cli"
  },
  "license": "MPL-2.0",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "imports": {
    "#src/*": {
      "development": "./src/*",
      "default": "./dist/*"
    }
  },
  "main": "dist/index.js",
  "bin": {
    "baseplate": "./bin/baseplate.js"
  },
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "!dist/**/*.d.ts.map",
    "!dist/**/*.tsbuildinfo",
    "bin/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf ./dist",
    "dev": "tsx watch --tsconfig ./tsconfig.app.json --exclude /**/node_modules/** -r dotenv/config -C development ./src/cli.ts",
    "dev:serve": "pnpm dev serve",
    "extract:templates": "pnpm start templates extract",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "project:generate": "pnpm start generate",
    "start": "tsx --tsconfig ./tsconfig.app.json -r dotenv/config -C development ./src/cli.ts",
    "test": "vitest",
    "test:e2e": "playwright test",
    "typecheck": "tsc -b --noEmit"
  },
  "dependencies": {
    "@baseplate-dev/project-builder-common": "workspace:*",
    "@baseplate-dev/project-builder-lib": "workspace:*",
    "@baseplate-dev/project-builder-server": "workspace:*",
    "@baseplate-dev/project-builder-web": "workspace:*",
    "@baseplate-dev/utils": "workspace:*",
    "commander": "^12.1.0",
    "pino": "9.5.0",
    "pino-pretty": "13.0.0",
    "pkg-dir": "^8.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@baseplate-dev/tools": "workspace:*",
    "@playwright/test": "1.51.0",
    "@types/node": "catalog:",
    "dotenv": "^16.0.3",
    "eslint": "catalog:",
    "fastify": "5.3.2",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
