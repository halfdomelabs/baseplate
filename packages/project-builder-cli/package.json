{
  "name": "@halfdomelabs/project-builder-cli",
  "version": "0.8.0",
  "description": "Full-stack CLI builder using Baseplate generators",
  "homepage": "https://www.halfdomelabs.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfdomelabs/baseplate",
    "directory": "packages/project-builder-cli"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Half Dome Labs LLC",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "baseplate": "./scripts/baseplate.js"
  },
  "files": [
    "LICENSE",
    "CHANGELOG",
    "dist/**/*",
    "scripts/**/*"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rm -rf ./dist",
    "dev": "tsx watch --exclude /**/node_modules/** -r dotenv/config ./src",
    "dev:serve": "pnpm dev serve",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "tsx -r dotenv/config ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@halfdomelabs/project-builder-common": "workspace:*",
    "@halfdomelabs/project-builder-lib": "workspace:*",
    "@halfdomelabs/project-builder-server": "workspace:*",
    "@halfdomelabs/project-builder-web": "workspace:*",
    "commander": "^12.1.0",
    "lodash": "^4.17.21",
    "package-up": "^5.0.0",
    "pino": "9.4.0",
    "pino-pretty": "11.2.2",
    "pkg-dir": "^8.0.0"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "workspace:*",
    "@types/lodash": "4.17.7",
    "@types/node": "catalog:",
    "dotenv": "^16.0.3",
    "tsc-alias": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
