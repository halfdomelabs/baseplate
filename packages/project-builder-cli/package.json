{
  "name": "@halfdomelabs/project-builder-cli",
  "version": "0.2.0",
  "description": "Full-stack CLI builder using Baseplate generators",
  "main": "dist/index.js",
  "repository": "https://github.com/halfdomelabs/baseplate/tree/master/packages/project-builder-cli",
  "author": "Half Dome Labs LLC",
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "LICENSE",
    "dist/**/*"
  ],
  "bin": {
    "baseplate": "./dist/index.js"
  },
  "devDependencies": {
    "@halfdomelabs/tools": "^0.2.0",
    "@types/ramda": "^0.27.64",
    "@types/resolve": "^1.20.2",
    "@types/ws": "^8.5.3",
    "@types/yup": "^0.29.13",
    "dotenv": "^16.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.9.5"
  },
  "scripts": {
    "start": "ts-node --transpile-only -r dotenv/config -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev --rs --transpile-only -r dotenv/config -r tsconfig-paths/register --respawn src",
    "build": "tsc && tsc-alias",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier -w .",
    "release": "yarn publish --non-interactive"
  },
  "dependencies": {
    "@fastify/helmet": "^10.1.0",
    "@fastify/static": "^6.5.0",
    "@fastify/websocket": "^7.1.0",
    "@halfdomelabs/core-generators": "^0.2.0",
    "@halfdomelabs/fastify-generators": "^0.2.0",
    "@halfdomelabs/project-builder-lib": "^0.2.0",
    "@halfdomelabs/project-builder-web": "^0.2.0",
    "@halfdomelabs/react-generators": "^0.2.0",
    "@halfdomelabs/sync": "^0.2.0",
    "chalk": "4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^8.3.0",
    "fastify": "^4.9.2",
    "fs-extra": "^10.0.1",
    "globby": "^11.0.4",
    "json-stringify-pretty-compact": "^3.0.0",
    "open": "^8.4.0",
    "pino": "8.1.0",
    "pino-pretty": "8.1.0",
    "ramda": "^0.28.0",
    "resolve": "^1.22.2",
    "sort-keys": "^5.0.0"
  },
  "engines": {
    "node": "^16.0.0",
    "yarn": "^1.22.17"
  },
  "volta": {
    "node": "16.15.0",
    "yarn": "1.22.17"
  }
}
